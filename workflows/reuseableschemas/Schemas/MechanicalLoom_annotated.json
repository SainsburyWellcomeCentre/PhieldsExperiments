{
  "$id": "MechanicalLoom.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "MechanicalLoom",
  "description": "Describes a mechanical loom used in the Phields arena",
  "x-sgen-typename": "Looms.MechanicalLoom",
  "type": "object",
  "definitions": {
    "loomAction": {
      "enum": [
        "Drop",
        "Home"
      ],
      "default": "Drop"
    }
  },
  "properties": {
    "portName": {
      "type": "string",
      "default": "COM9"
    },
    "id": {
      "type": "integer",
      "default": 0
    },
    "homeVelocity": {
      "type": "integer",
      "default": 200
    },
    "bottomPosition": {
      "type": "integer",
      "default": 3000
    },
    "bottomPauseTimeSeconds": {
      "type": "number",
      "default": 1.0
    },
    "dropAcceleration": {
      "type": "integer",
      "default": 18000,
      "minimum": 10000,
      "maximum": 20000
    },
    "dropMaxVelocity": {
      "type": "integer",
      "default": 10000
    }
  },
  "required": [
    "portName",
    "id",
    "homeVelocity",
    "bottomPosition",
    "bottomPauseTimeSeconds",
    "dropAcceleration",
    "dropMaxVelocity"
  ]
}